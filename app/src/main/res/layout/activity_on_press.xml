<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_gradient"
    tools:context=".activities.OnPressActivity">

    <TextView
        android:id="@+id/category_activity_description_id"
        android:layout_width="322dp"
        android:layout_height="200dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="152dp"
        android:background="@drawable/border"
        android:fontFamily="@font/autour_one"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/category_picture_id"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/category_picture_id"
        app:layout_constraintTop_toBottomOf="@+id/category_picture_id"
        tools:ignore="TextViewEdits" />

    <ImageView
        android:id="@+id/category_picture_id"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toTopOf="@+id/category_activity_description_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_name_id"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/category_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/my_recycler_view_row_border"
        android:fontFamily="@font/aclonica"
        android:padding="10dp"
        android:text="Category name"
        android:textColor="@color/myHeaderColor"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/category_picture_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>