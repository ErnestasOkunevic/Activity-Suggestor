<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ViewSavedActivity"
    android:background="@drawable/background_main_gradient">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:text="My saved activities"
        android:textAlignment="center"
        android:fontFamily="@font/aclonica"
        android:textColor="@color/myHeaderColor"
        android:textSize="30sp"
        android:paddingTop="15dp"
        android:background="@drawable/background_main_gradient"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saved_activities_recycler_view_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>